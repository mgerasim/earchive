<script language="javascript"> 
function toggle() {
    var ele = document.getElementById("toggleText");
	var text = document.getElementById("displayText");
	    if(ele.style.display == "block") {
	    	    ele.style.display = "none";
	    		    text.innerHTML = "Расширенный поиск";
	    		        }
	    		    	else {
	    		    		ele.style.display = "block";
	    		    			text.innerHTML = "Скрыть расширенный поиск";
	    		    			    }
	    		    			    } 
</script>

<h1>Параметры поиска</h1>

    <%= form_tag abonents_path, :method => :get, :remote => true do %>
	  <label>Введите значение ЛС или ФИО абонента:</label>
	  <table width="950px" >  
	    <tr>
    		<td width="10%">
		    <%= text_field_tag :abonent_search, @uri_params["search"] %>
    		</td>
    		
		
    		<td width="50%">
    			<%= submit_tag "Поиск", :action => abonents_path %>
			<a id="displayText"  href="javascript:toggle();">Расширенный поиск</a> 
    		</td
    		
    		<td width="40%">
    		</td
    		
	  </tr>
	</table>   
	
	<div id="toggleText" style="display: none" >
		<%= render(:partial => "attr_search", :locals => {:values => @uri_params} ) %>
	</div>
	
    <% end %>	


<div id="abonents">
      <%= render(:partial => "search_result") %>
</div>



