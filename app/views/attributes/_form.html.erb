<%= form_for(@attribute) do |f| %>
  <% if @attribute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attribute.errors.count, "error") %> prohibited this attribute from being saved:</h2>

      <ul>
      <% @attribute.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Наименование:' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Короткое наименование:' %><br />
    <%= f.text_field :short_name %>
  </div>
  <div class="field">
    <%= f.label 'Тип аттрибута:' %><br />
    <%= f.select :attr_type, Attribute::ATTRIBUTE_TYPES, :promt => "Выберите тип" %>
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить' %>
  </div>
<% end %>
